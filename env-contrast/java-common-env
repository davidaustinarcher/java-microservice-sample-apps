# For wait-for-then-exec.sh
PATH=/app:/usr/local/bin
WAIT_FOR=contrast-agent:java

# Common Contrast config
CONTRAST__AGENT__JAVA__STANDALONE_APP_NAME=Bookstore
CONTRAST__AGENT__CONTRAST_WORKING_DIR=/tmp/contrast
CONTRAST__AGENT__LOGGER__STDOUT=true
CONTRAST__SERVER__ENVIRONMENT=development

# The WAIT_FOR waits for this path to become available
JAVA_TOOL_OPTIONS=-javaagent:/agents/java/contrast.jar
